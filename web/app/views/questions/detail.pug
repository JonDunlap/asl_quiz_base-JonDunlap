extends ../_layout
include ../_includes/link_mixin
block content
	h1.heading= question.title
		+link('/admin/questions/edit/'+question.id, 'Edit', 'fa-edit')
		+link('/admin/questions/delete/'+question.id, 'Delete', 'fa-trash', 'linkSecondary')
	h2.headingSecondary Choices
	ul.list 
		if choices
			for choice in choices
				li.list__item
					span.list__item__title= choice.value
					+link('/admin/choices/edit/'+choice.id, 'Edit', 'fa-edit')
					+link('/admin/choices/delete/'+choice.id, 'Delete', 'fa-trash', 'linkSecondary')
	a.button.primary(href="/admin/choices/new?questionId="+question.id) Add a new choice