extends ../_layout
block content
	h1.heading= id ? 'Edit Question' : 'Create a New Question'
	form.form(method="POST")
		label.form__label Question Title
			input.form__input(type="text", name="title", value=title)
		button.button.active(type="submit")= id ? 'Edit Question' : 'Create Question'
		if errors
			for error in errors
				small.flash=error.msg